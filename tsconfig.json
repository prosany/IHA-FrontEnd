{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src",
    "paths": {
      "Assets/*": ["Assets/*"],
      "Styles/*": ["Styles/*"],
      "Components/*": ["Components/*"],
      "Routes/*": ["Routes/*"],
      "Pages/*": ["Pages/*"],
      "API/*": ["API/*"],
      "Layouts/*": ["Layouts/*"],
      "Store/*": ["Store/*"],
      "Test/*": ["Test/*"],
      "Type/*": ["Type/*"],
      "Schema/*": ["Schema/*"],
      "Helpers/*": ["Helpers/*"],
      "./*": ["~/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "public"]
}
